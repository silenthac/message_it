<body>

    <div class="front-image">

        <div class="home-nav" id="navbar">
           
                <a href="/posts">Posts</a>
                <%if(currentUser)  {%> 
                <a href="/profile/<%=currentUser._id%>">Account</a>
                <% } else{%>
                    <a href="/login">Login</a>
                    <% } %>  
